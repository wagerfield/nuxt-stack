{
  "private": true,
  "scripts": {
    "commit": "commit",
    "release": "node -r dotenv/config && lerna publish",
    "test": "lerna run test --stream",
    "diff": "lerna diff",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "lerna": "3.16.5"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
